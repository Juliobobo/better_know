{% trans_default_domain 'FOSUserBundle' %}
{% extends '::bk/baseFOSUser.html.twig' %}

{% block title %}Better Know - Register{% endblock %}

{% block header_title %}
    <h4>BK - Create your account</h4>
{% endblock %}

{% block security %}
    {% block fos_user_content %}
        <div class="login-wrapper">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" class="btn btn-default btn-cfg button-right" value="{{ 'registration.submit'|trans }}" />
            </div>
            {{ form_end(form) }}
        </div>
    {% endblock fos_user_content%}
{% endblock %}